#https://wiki.syslinux.org/wiki/index.php?title=Menu#The_advanced_menu_system
DEFAULT vesamenu.c32

MENU BACKGROUND pxebackground.png
MENU RESOLUTION 1024 768

MENU TITLE PXE Server
MENU TABMSG Mess with the best, die like the rest!

MENU WIDTH 60

menu color screen 37;40       #80ffffff #00000000 std
menu color border  30;44      #40000000 #FF000000 std
menu color title  1;5;36;44   #c014db02 #FF000000 std
menu color unsel 37;44        #90ffffff #FF404040 std
menu color hotkey 1;37;44     #ffffffff #00000000 std
menu color sel   7;37;40      #e014db02 #FF000000 all
menu color hotsel 1;7;37;40   #e0400000 #20ff8000 all
menu color disabled  1;30;44  #60cccccc #00000000 std
menu color scrollbar  30;44   #40000000 #00000000 std
menu color tabmsg  31;40      #90ffff00 #FF000000 std
menu color cmdmark  1;36;40   #c000ffff #00000000 std
menu color cmdline 37;40      #c0ffffff #00000000 std
menu color pwdborder  30;47   #80ffffff #20ffffff std
menu color pwdheader 31;47    #80ff8080 #20ffffff std
menu color pwdentry 30;47     #80ffffff #20ffffff std
menu color timeout_msg 37;40  #80ffffff #00000000 std
menu color timeout  1;37;40   #c0ffffff #00000000 std
menu color help  37;40        #c0ffffff #00000000 std
menu color msg07  37;40       #90ffffff #00000000 std


{% for version in windows if version.bootcategory == "server" %}

label {{ version.bootentry }}
menu label {{ version.bootentry }}
menu default
kernel memdisk
append iso raw initrd={{ version.name }}.iso

{% endfor %}


{% for version in windows if version.bootcategory == "client" %}

label {{ version.bootentry }}
menu label {{ version.bootentry }}
menu default
kernel memdisk
append iso raw initrd={{ version.name }}.iso

{% endfor %}

